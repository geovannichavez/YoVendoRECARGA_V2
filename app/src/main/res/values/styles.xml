<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/ApplicationGreenTheme</item>
        <item name="android:colorPrimaryDark">@color/ApplicationGreenThemeDark</item>
        <item name="android:statusBarColor">@color/ApplicationGreenTheme</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/ApplicationGreenTheme</item>
        <item name="android:windowBackground">@color/ActivityWhiteBackground</item>

        <!--Setea el color del item seleccinado en el Drawer-->
        <item name="colorControlHighlight">@color/ApplicationGreenTheme</item>

        <!-- You can also set colorControlNormal, colorControlActivated
        colorControlHighlight, and colorSwitchThumbNormal. -->

        <!--<item name="android:colorControlActivated">@color/ApplicationGreenTheme</item>
        <item name="colorSwitchThumbNormal">@color/ApplicationGreenTheme</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/ApplicationGreenTheme</item>

    </style>

    <style name="GreenBackgroundCheck" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/ActivityWhiteBackground</item>
        <item name="colorControlActivated">@color/ActivityWhiteBackground</item>
        <item name="android:textColor">@color/ActivityWhiteBackground</item>
    </style>

    <style name="NavigationViewTheme" parent="AppTheme">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--<style name="CustomSpinnerGrayText" parent="android:Widget.TextView.SpinnerItem">-->
    <!--<item name="android:textAppearance">@style/CustomSpinnerGrayTextAppearance</item>-->
    <!--</style>-->
    <!--<style name="CustomSpinnerGrayTextAppearance" >-->
    <!--<item name="android:textColor">@color/TextColor</item>-->
    <!--<item name="android:textSize">28sp</item>-->
    <!--</style>-->

    <style name="EditTextForGreenBackground">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/SemiTransparentWhite</item>
        <item name="colorControlActivated">@color/SemiTransparentWhite</item>
        <item name="colorControlHighlight">@color/SemiTransparentWhite</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <!--    TEMA CON ACTIONBAR  -->
    <style name="ThemeConfiguration" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/ApplicationGreenTheme</item>
        <item name="colorPrimaryDark">@color/ApplicationGreenThemeDark</item>
        <item name="colorAccent">@color/ApplicationGreenTheme</item>
        <item name="android:windowBackground">@color/ActivityWhiteBackground</item>
    </style>


    <!--    TEMA CON PARA DIALOGS    -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/ApplicationGreenTheme</item>

    </style>

    <!--    TEMA CON PARA BOTTOM DRAWER  -->
    <style name="BottomDrawerTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--Setea el color del item seleccinado en el Drawer-->
        <item name="colorControlHighlight">@color/Transparent</item>
        <item name="android:activatedBackgroundIndicator">@color/AppGreen</item>
    </style>



</resources>
